<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity" android:background="@mipmap/back">
    <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_height="55dp"
            android:layout_width="98dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="208dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.973"/>
    <Button
            android:layout_width="321dp"
            android:layout_height="68dp"
            android:id="@+id/mycol_butt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.962"
            android:background="#F44336"
            android:theme="@style/Base.Widget.AppCompat.Button.Colored" android:foreground="@mipmap/mycol"
            app:layout_constraintHorizontal_bias="0.495"/>
    <ImageView
            android:layout_width="194dp"
            android:layout_height="47dp" app:srcCompat="@mipmap/hot"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.572" app:layout_constraintVertical_bias="0.041"/>
    <Button
            android:layout_width="321dp"
            android:layout_height="68dp"
            android:id="@+id/start_butt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.746"
            app:layout_constraintHorizontal_bias="0.473" android:background="#F44336"
            android:foreground="@mipmap/start" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="323dp"
            android:layout_height="270dp" app:srcCompat="@mipmap/news1"
            android:id="@+id/imageView7" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.249"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="91dp" app:srcCompat="@mipmap/arrow"
            android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.875" app:layout_constraintVertical_bias="0.533"/>

</androidx.constraintlayout.widget.ConstraintLayout>