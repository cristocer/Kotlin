<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@mipmap/back">

    <ImageView
            android:id="@+id/logo_id"
            android:layout_width="388dp"
            android:layout_height="359dp"
            android:layout_centerInParent="true"
            android:src="@drawable/loog" android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_id"
            android:layout_centerHorizontal="true"
            android:text="Loading Screen"
            android:textSize="30dp"
            android:textColor="@color/blue"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_alignParentEnd="true" android:layout_marginEnd="176dp"
            android:layout_alignParentStart="true" android:layout_marginStart="182dp" android:layout_marginTop="462dp"
            android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="149dp"/>


</RelativeLayout>